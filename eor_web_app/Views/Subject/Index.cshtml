                    <a type="button" class="btn btn-success btn-sm" asp-controller="FileModel" asp-action="Create" asp-route-SubjectId="@i.Id" >Add a file</a>
                    <a type="button" class="btn btn-danger btn-sm" asp-controller="FileModel" asp-action="Delete" asp-route-Id="@i.Id">Delete a file</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
