@model IEnumerable<eor_web_app.Models.Group>
@{
    ViewData["Title"] = "Index";
}
@if (User.Identity.IsAuthenticated)
{ 
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th ></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Subject" asp-action="Index" asp-route-id="@i.Id">@Html.DisplayFor(model => i.Name)</a>
                </td>
                <td>
                    <a type="button" class="btn btn-primary" asp-action="Edit" asp-route-id="@i.Id">Edit</a>
                    <a type="button" class="btn btn-danger" asp-action="Delete" asp-route-id="@i.Id">Delete</a>
                    <a type="button" class="btn btn-danger" asp-controller="Subject" asp-action="Create" asp-route-GroupId="@i.Id">Add a subject</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}
else
{
    <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th ></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var i in Model)
        {
            <tr>
                <td>
                    <a asp-controller="Subject" asp-action="Index" asp-route-id="@i.Id">@Html.DisplayFor(model => i.Name)</a>
                </td>
            </tr>
        }
    </tbody>
</table>
}