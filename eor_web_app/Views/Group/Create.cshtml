@model eor_web_app.Models.Group

@{
    ViewData["Title"] = "Create";
}

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden"></input>
            <div class="form-group">
                <label asp-for="ProfileId" class="control-label invisible"></label>
                <input type="hidden" asp-for="ProfileId" class="form-control" asp-items="ViewBag.ProfileId" />
            </div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger" ></span>
            </div>
            <div class="form-control">
                <input type="submit"  value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
    <a type="button" class="btn btn-primary btn-sm" asp-action="Index">back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}